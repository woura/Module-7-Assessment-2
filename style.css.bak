html{
	height: 100%;
}

body{
	font-family: cursive;
	margin: 0;
	padding: 0;
	height: 100%;
}


.body-home{
	background-image: url('images/food-background.png');
	background-position: center;
	background-attachment: fixed;
	background-repeat: no-repeat;
	background-size: cover;
	
}

.body-meals{
	background-image: url('images/food-background2.png');
	background-position: center;
	background-attachment: fixed;
	background-repeat: no-repeat;
	background-size: cover;
}

/*========== HOME PAGE==========*/

#home-logo-img{
	width: 200px;
	display: block;
	margin: auto;
	padding: 25px 10px 10px 10px;
}

/*========== HOME PAGE MENU==========*/

.home-menu-item{
	text-decoration: none;
    text-transform: uppercase;
	
    color: black;
    font-size: 25px;
    font-weight: bold;
    text-align: center;
	border: 5px solid black;
	
	display: block;
    margin: auto;
    margin-bottom: 5px;
    width: 80%;
}

/*========== HEADER ==========*/

.header{
    background-color: #FFAE42;
    width: 100%;
    height: 50px;
    top: 0;
    position: fixed;
    overflow: hidden;
    text-align: center;
}

.header i{
    float: left;
    padding: 17px 0px 0px 17px;
    color: white;
}

.header img{
    width: 150px;
    padding-top: 14px;
    padding-right: 25px;
}

/*===== MEALS PAGE MENU =====*/

.meals-lists a {
    text-decoration: none;
}

.meals-lists-item{
    border: 5px solid #1a1a1a;
    margin: 60px;
}



.meals-lists-item h1{
    font-weight: bold;
    font-size: 20px;
    color: #1a1a1a;
    padding-left: 10px; 
}

.meals-lists-item i{
    float: right;
    color: #1a1a1a;
    padding-right: 10px;
}

.meals-lists-item p{
    font-size: 15px;
    font-style: italic;
    color: #4d4d4d;
    margin-top: -7px;
    padding-left: 10px;
}

/*========== RECIPE PAGE DETAILS ==========*/

.recipe-details img{
    width: 100%;
    margin-top: 50px;
}

.recipe-details h1{
    font-size: 25px;
    text-align: center;
    border: 5px solid #1a1a1a;
    margin: 10px;
    padding: 5px;
    
}

.recipe-details h2{
    font-size: 20px;
    text-align: left;
    margin: 0px;
    margin-left: 10px;
    
}

.recipe-details-info{
    margin-left: 25px;
    margin-right: 25px;
}

.recipe-details-info p{
    font-size: 13px;
    display: inline-block;
}

.recipe-top-up label{
    line-height: 25px;
    margin-left: 10px;
}

.recipe-details-steps{
    padding-top: 20px;
}

.recipe-details-steps ol{
    padding-left: 28px;
}

.recipe-details{
	background-color: lightyellow;
}

/*============ TOP UP ============*/



textarea{
      width: 100%;
      height :25px;
      margin : 12px 0;
      border : 1px solid #929292;
}

.button{
      display : block;
      background-color: #FFAE42;
      text-decoration : none;
      text-align  : center;
      color       : white;
      font-size   : 16px;
      font-weight : 600;
      margin : 12px 0;
      padding : 8px 0;
}